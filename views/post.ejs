<%- include('./partials/nav') %>

<div class="container full-post-container">
  <div class="row">
    <div class="col-md-12">
      <div class="post-title">
        <h2><%= post.title %></h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="full-post">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-md-12">
              <div>
                <% const imageURL = post.imageURL.replace('upload/',
                'upload/w_1200/') %>
                <img class="post-img" src="<%= imageURL %> " alt="" />
              </div>
            </div>

            <div class="col-md-12">
              <div class="post-content"><%- post.content %></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4 sidebar">
      <div class="row recents">
        <% recents.forEach((recent) => { %>
          <%- include('./partials/recent', recent) %>
       <% }) %>
      </div>
    </div>
  </div>
</div>
